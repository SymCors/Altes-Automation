                    <materialDesign:Card Width="200" UniformCornerRadius="20" x:Name="device1Card" Visibility="Visible"
                         Background="WhiteSmoke" Margin="20" VerticalAlignment="Top" HorizontalAlignment="Left" MouseDoubleClick="device1_Click">
