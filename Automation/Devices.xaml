                            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,110,0,0">
                                <TextBlock FontWeight="Bold" x:Name="deviceName1" Text="{x:Static language:language.deviceName}"/>
                                <TextBlock TextWrapping="Wrap" VerticalAlignment="Center" x:Name="operatorName1" Text="{x:Static language:language.operators}"/>
                            </StackPanel>
                            <Border HorizontalAlignment="Right" VerticalAlignment="Top" Height="34" Width="35" BorderBrush="Transparent" 
                                            Background="OrangeRed" Margin="0,66,15,0" CornerRadius="20" x:Name="status1">
                            </Border>
                            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" Orientation="Horizontal" Margin="8">
                                <Button x:Name="settings" Style="{StaticResource MaterialDesignToolButton}" Width="30" Padding="2 0 2 0" VerticalAlignment="Bottom"
                        materialDesign:RippleAssist.IsCentered="True" Tag="{Binding}" Click="DevicesSettings1" Foreground="Black">
                                    <materialDesign:PackIcon Kind="CogOutline" />
                                </Button>
                            </StackPanel>

                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0 165 0 50">
                                <Border Background="Blue" CornerRadius="10" Width="160">
                                    <WrapPanel>
                                        <Label Content="{x:Static language:language.speed}" Foreground="White" FontSize="15"  Margin="5 0 0 0"/>
                                        <Label Content="{Binding Speed}" Foreground="White" FontSize="15" x:Name="speed1" Margin="0 0 5 0"/>
                                    </WrapPanel>
                                </Border>
                                <Border Margin="10" Background="Green" CornerRadius="10" Width="160">
                                    <WrapPanel>
                                        <Label Content="{x:Static language:language.lengthdot}" Foreground="White" FontSize="15"  Margin="5 0 0 0"/>
                                        <Label Content="{Binding Length}" Foreground="White" FontSize="15" x:Name="length1" Margin="0 0 5 0"/>
                                    </WrapPanel>
                                </Border>
                                <Label Content="{x:Static language:language.workOnLine}" Foreground="Black" FontSize="15"  Margin="10 0 0 0"/>
                                <Border Background="SlateGray" CornerRadius="10" Opacity="0.5"
                    Width="160">
                                    <TextBlock Padding="3" Text="{Binding Length}" Foreground="White" FontSize="15" Margin="0 0 5 0" TextWrapping="WrapWithOverflow"
                                                   x:Name="work1" MouseLeftButtonDown="work1_MouseLeftButtonDown" Height="100" />
                                </Border>
                            </StackPanel>
